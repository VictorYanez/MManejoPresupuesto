@model Categoria 
@{
    ViewData["Title"] = "Borrar Categoría";
}
<h1>@ViewData["Title"]</h1>
<form asp-action="BorrarCategoria">
    <div class="form-group">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="mb-3">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" disabled />
    </div>
    <div class="mb-3">
        <label asp-for="TipoOperacionId"></label>
        <input asp-for="TipoOperacionId" class="form-control" disabled />
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-2">Borrar</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancelar</a>

</form>
