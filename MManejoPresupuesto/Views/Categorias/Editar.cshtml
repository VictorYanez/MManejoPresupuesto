@model Categoria
@{
    ViewData["Title"] = "Editar Categoría";
}
<h1>@ViewData["Title"]</h1>

<form asp-action="Editar">
    <div class="form-group">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        </div>

    <div class="mb-3">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TipoOperacionId"></label>
        <select asp-for="TipoOperacionId" class="form-control" asp-items="Html.GetEnumSelectList<TipoOperacion>()">
            <option value="">-- Seleccione un tipo de operación --</option>
        </select>
        <span asp-validation-for="TipoOperacionId" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary mt-2">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancelar</a>

</form>
