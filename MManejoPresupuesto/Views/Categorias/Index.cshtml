@model IEnumerable<Categoria>

@{
    ViewData["Title"] = "Categorias";
}

    <h1>@ViewData["Title"]</h1>
    <a asp-action="Crear" class="btn btn-primary mb-3">Crear Nuevo</a>

    <table class="table">
        <thead>
            <tr>
                <th>Acciones</th>
                <th>Nombre</th>
                <th>Tipo de Operación</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var categoria in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Editar" asp-route-id="@categoria.Id" class="btn btn-primary">Editar
                            <i class="bi-pencil-fill"></i>
                        </a>
                        <a asp-action="Borrar" asp-route-id="@categoria.Id" class="btn btn-danger">Borrar
                            <i class="bi-trash-fill"></i>
                        </a>
                    </td>
                    <td>
                        @categoria.Nombre
                    </td>
                    <td>@categoria.TipoOperacionId</td>
                </tr>
            }
        </tbody>

    </table>
